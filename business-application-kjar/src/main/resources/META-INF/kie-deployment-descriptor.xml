<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<deployment-descriptor xsi:schemaLocation="" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <persistence-unit>org.jbpm.domain</persistence-unit>
    <audit-persistence-unit>org.jbpm.domain</audit-persistence-unit>
    <audit-mode>JPA</audit-mode>
    <persistence-mode>JPA</persistence-mode>
    <runtime-strategy>PER_PROCESS_INSTANCE</runtime-strategy>
    <marshalling-strategies/>
    <event-listeners>
        <event-listener>
            <resolver>mvel</resolver>
            <identifier>new
                org.jbpm.process.audit.JPAWorkingMemoryDbLogger(org.jbpm.runtime.manager.impl.jpa.EntityManagerFactoryManager.get().getOrCreate("org.jbpm.audit.persistence.jpa"));
            </identifier>
            <parameters/>
        </event-listener>
    </event-listeners>
    <task-event-listeners>
        <task-event-listener>
            <resolver>mvel</resolver>
            <identifier>new
                org.jbpm.services.task.lifecycle.listeners.BAMTaskEventListener(org.jbpm.runtime.manager.impl.jpa.EntityManagerFactoryManager.get().getOrCreate("org.jbpm.audit.persistence.jpa"))
            </identifier>
        </task-event-listener>
    </task-event-listeners>
    <globals/>
    <work-item-handlers/>
    <environment-entries/>
    <configurations/>
    <required-roles/>
    <remoteable-classes/>
    <limit-serialization-classes>true</limit-serialization-classes>
</deployment-descriptor>
